{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Patient list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Number</th>
                <th>Name</th>
                <th>Birthdate</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Hospital</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for key, entity in entities %}
            <tr>
                <td>{{ key + 1 }}</td>
                <td><a href="{{ path('patients_show', { 'id': entity.id }) }}">{{ entity.name }}</td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.address }}</td>
                <td><a href="{{ path('patients_show', { 'id': entity.id }) }}">{{ entity.hospital.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('patients_show', { 'id': entity.id }) }}">Show Patient</a>
                    </li>
                    <li>
                        <a href="{{ path('patients_edit', { 'id': entity.id }) }}">Edit Patient</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('patients_new') }}">
                Add a new Patient
            </a>
        </li>
    </ul>
    {% endblock %}
