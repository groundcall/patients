{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-lg-4">
            <h1>Hospital list</h1>
        </div>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                {% for key, entity in entities %}
                    <tr>
                        <td>{{ key + 1 }}</td>
                        <td><a href="{{ path('hospital_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.address }}</td>
                        <td>{{ entity.phone }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
